<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<ImageView
    android:id="@+id/login_app_img"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="100dp"
    android:src="@drawable/login"/>

<TextView
    android:id="@+id/login_app_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="로그인"
    android:textColor="#36C5F1"
    android:textSize="25dp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="@id/login_app_img"
    app:layout_constraintHorizontal_bias="0.545"
    app:layout_constraintStart_toStartOf="@id/login_app_img"
    app:layout_constraintTop_toBottomOf="@id/login_app_img" />

<TextView
    android:id="@+id/login_id_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/login_app_text"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="50dp"
    android:layout_marginTop="20dp"
    android:textSize="18dp"
    android:textColor="#808080"
    android:text="Id"/>

<EditText
    android:id="@+id/login_id_editText"
    android:layout_width="300dp"
    android:layout_height="40dp"
    app:layout_constraintTop_toBottomOf="@id/login_id_text"
    app:layout_constraintStart_toStartOf="@id/login_id_text"
    android:background="@drawable/id_text_rounded_box"
    android:layout_marginTop="5dp"/>

<TextView
    android:id="@+id/login_pw_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/login_id_editText"
    app:layout_constraintStart_toStartOf="@id/login_id_text"
    android:layout_marginTop="20dp"
    android:textSize="18dp"
    android:textColor="#808080"
    android:text="Password"/>

<EditText
    android:id="@+id/login_pw_edittext"
    android:layout_width="300dp"
    android:layout_height="40dp"
    app:layout_constraintTop_toBottomOf="@id/login_pw_text"
    app:layout_constraintStart_toStartOf="@id/login_id_text"
    android:background="@drawable/id_text_rounded_box"
    android:layout_marginTop="5dp"/>

<Button
    android:id="@+id/login_btn"
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:text="로그인"
    android:textColor="@color/white"
    android:textSize="16dp"
    android:background="@drawable/login_button"
    app:layout_constraintStart_toStartOf="@id/login_id_text"
    app:layout_constraintTop_toBottomOf="@id/login_pw_edittext"
    android:layout_marginTop="20dp" />

<View
    android:id="@+id/login_line_01"
    android:layout_width="120dp"
    android:layout_height="1dp"
    android:background="#808080"
    app:layout_constraintTop_toBottomOf="@id/login_btn"
    app:layout_constraintStart_toStartOf="@id/login_btn"
    android:layout_marginTop="20dp"/>

<TextView
    android:id="@+id/login_text_or"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="OR"
    android:textColor="#808080"
    android:textSize="15dp"
    app:layout_constraintStart_toEndOf="@id/login_line_01"
    app:layout_constraintEnd_toStartOf="@id/login_line_02"
    app:layout_constraintTop_toBottomOf="@id/login_btn"/>

<View
    android:id="@+id/login_line_02"
    android:layout_width="120dp"
    android:layout_height="1dp"
    android:background="#808080"
    app:layout_constraintTop_toBottomOf="@id/login_btn"
    app:layout_constraintEnd_toEndOf="@id/login_btn"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/login_line_01"
    app:layout_constraintStart_toStartOf="@id/login_btn"
    app:layout_constraintEnd_toEndOf="@id/login_btn"

    android:layout_marginTop="30dp">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/kakao"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/naver"
        android:background="@android:color/transparent"
        android:layout_marginStart="15dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/google"
        android:background="@android:color/transparent"
        android:layout_marginStart="15dp"/>

</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>