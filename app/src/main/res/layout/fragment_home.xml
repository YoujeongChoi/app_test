<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="#4C725D">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/home_menu_ib"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/menu_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="25dp"/>

        <TextView
            android:id="@+id/home_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="62dp"
            android:fontFamily="@font/nully"
            android:text="10월 20일 12시 12분"
            android:textColor="#24A9E1"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nully"
            android:text="서울시 용산구 원효로1가"
            android:textColor="#24A9E1"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@id/home_time_tv"
            app:layout_constraintTop_toBottomOf="@id/home_time_tv" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="7dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/location_blue"
            app:layout_constraintBottom_toBottomOf="@id/home_address_tv"
            app:layout_constraintStart_toEndOf="@+id/home_address_tv"
            app:layout_constraintTop_toTopOf="@id/home_address_tv" />


        <TextView
            android:id="@+id/home_dust_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nully"
            android:text="미세먼지"
            android:textColor="#24A9E1"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@id/home_line"
            app:layout_constraintStart_toStartOf="@id/home_line"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/home_dust_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nully"
            android:text="10"
            android:textColor="#24A9E1"
            android:textSize="19dp"
            app:layout_constraintTop_toTopOf="@id/home_dust_tv"
            app:layout_constraintStart_toEndOf="@id/home_dust_tv"
            android:layout_marginStart="35dp"/>

        <TextView
            android:id="@+id/home_dust_data_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nully"
            android:text="㎍/㎥"
            android:textColor="#24A9E1"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@id/home_dust_tv"
            app:layout_constraintStart_toEndOf="@id/home_dust_data"
            android:layout_marginTop="5dp"
            android:layout_marginStart="3dp"/>

        <TextView
            android:id="@+id/home_finedust_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nully"
            android:text="초미세먼지"
            android:textColor="#24A9E1"
            android:textSize="17dp"
            app:layout_constraintTop_toBottomOf="@id/home_dust_tv"
            app:layout_constraintStart_toStartOf="@id/home_line"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/home_finedust_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nully"
            android:text="15"
            android:textColor="#24A9E1"
            android:textSize="19dp"
            app:layout_constraintTop_toTopOf="@id/home_finedust_tv"
            app:layout_constraintStart_toStartOf="@id/home_dust_data" />

        <TextView
            android:id="@+id/home_finedust_data_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nully"
            android:text="㎍/㎥"
            android:textColor="#24A9E1"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@id/home_finedust_tv"
            app:layout_constraintStart_toEndOf="@id/home_finedust_data"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/home_text_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rokaf_slab"
            android:text="아"
            android:textColor="#24A9E1"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="30dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/home_text_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rokaf_slab"
            android:text="주"
            android:textColor="#24A9E1"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/home_text_01"
            app:layout_constraintTop_toBottomOf="@id/home_text_01"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/home_text_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rokaf_slab"
            android:text="좋"
            android:textColor="#24A9E1"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/home_text_01"
            app:layout_constraintTop_toBottomOf="@id/home_text_02"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/home_text_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rokaf_slab"
            android:text="음"
            android:textColor="#24A9E1"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/home_text_01"
            app:layout_constraintTop_toBottomOf="@id/home_text_03" />

        <ImageView
            android:id="@+id/home_face"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/face_verygood_1"
            app:layout_constraintBottom_toBottomOf="@+id/home_text_04"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"/>

            // app:layout_constraintEnd_toStartOf="@+id/home_text_04"


        <View
            android:id="@+id/home_line"
            android:layout_width="340dp"
            android:layout_height="1dp"
            android:background="#24A9E1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_face"
            android:layout_marginTop="50dp"/>


        <TextView
            android:id="@+id/home_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/diary"
            android:text="바깥활동 굿~~~~~~~한강가세요"
            android:textColor="#24A9E1"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_line"
            android:layout_marginTop="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/quotation_left"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/quotation_blue_1"
            app:layout_constraintBottom_toTopOf="@id/home_info_tv"
            app:layout_constraintEnd_toStartOf="@id/home_info_tv"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="-5dp"/>

        <ImageView
            android:id="@+id/quotation_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/quotation_blue_2"
            app:layout_constraintTop_toBottomOf="@id/home_info_tv"
            app:layout_constraintStart_toEndOf="@id/home_info_tv"
            android:layout_marginTop="5dp"
            android:layout_marginStart="-5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>