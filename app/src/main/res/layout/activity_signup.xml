<!--                    android:id="@+id/tos_recommend_et"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="45dp"-->
<!--                    android:background="@android:color/transparent"-->
<!--                    android:ems="10"-->
<!--                    android:hint="나이"-->
<!--                    android:textColorHint="#BDBDBD"-->
<!--                    android:textSize="14dp"-->
